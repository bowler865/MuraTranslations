<plugin>
<name>Mura Translations</name>
<package>MuraTranslations</package>
<directoryFormat>packageOnly</directoryFormat>
<version>4.0.0</version>
<provider>Blue River</provider>
<providerURL>https://github.com/blueriver/MuraTranslations</providerURL>
<category>Application</category>
<settings>
	<setting>
		<name>showFlags</name>
		<label>Show Flags</label>
		<hint>Show flags in list navigation tool.</hint>
		<type>selectbox</type>
		<required>true</required>
		<validation></validation>
		<regex></regex>
		<message></message>
		<defaultvalue>False</defaultvalue>
		<optionlist>True^False</optionlist>
		<optionlabellist></optionlabellist>
	</setting>
	<setting>
		<name>liveOnly</name>
		<label>Live Sites Only</label>
		<hint>Only list live sites on the frontend selection menu/list</hint>
		<type>selectbox</type>
		<required>true</required>
		<validation></validation>
		<regex></regex>
		<message></message>
		<defaultvalue>True</defaultvalue>
		<optionlist>True^False</optionlist>
		<optionlabellist></optionlabellist>
	</setting>
</settings>
<eventHandlers>
	<eventHandler event="onContentEdit" scriptfile="onContentEdit.cfm"/>
	<eventHandler event="onContentSave" component="cfcs.eventHandler"/>
	<eventHandler event="onContentDelete" component="cfcs.eventHandler"/>
</eventHandlers>
</plugin>
